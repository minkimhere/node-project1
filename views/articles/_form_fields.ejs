<div class="form-group mb-3">
    <label for="title">제목</label>
    <!-- required 해줘서 이거 받아올 거라는 거를 알려줘야한다. -->
    <input required value="<%=article.title%>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group mb-3">
    <label for="description">이름</label>
    <textarea name="description" id="description" class="form-control">
        <%= article.discription %>
    </textarea>
</div>

<div class="form-group mb-3">
    <label for="markdown">내용</label>
    <textarea required name="markdown" id="markdown" class="form-control">
        <%= article.markdown %>
    </textarea>
</div>
<div class="form-group mb-3">
    <label for="password">비밀번호</label>
    <!-- required 해줘서 이거 받아올 거라는 거를 알려줘야한다. -->
    <input required value="<%=article.password%>" type="password" name="password" id="password" class="form-control">
</div>

<!-- / index 페이지로 돌아가기 (취소) -->
<a href="/"  class="btn btn-secondary">취소</a>
<button type="submit" class="btn btn-primary">저장</button>